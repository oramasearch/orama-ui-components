{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "storybook-static/**"
      ]
    },
    "lint": {},
    "clean": {},
    "maintenance": {},
    "build:watch": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "demo-react#dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@orama/react-components#build"]
    }
  }
}
